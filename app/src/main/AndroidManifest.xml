<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yts.tymodoro">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tymodoro">
        <activity
            android:name=".splash.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CreateActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.HistoryActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.OptionsActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <receiver android:name=".services.ControlBroadcast"/>
        <service android:name=".services.PomodoreService"/>
    </application>

</manifest>